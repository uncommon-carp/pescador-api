{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": ["./packages/*/src/**/*.ts", "./packages/*/index.ts"],
  "exclude": ["node_modules"]
}
